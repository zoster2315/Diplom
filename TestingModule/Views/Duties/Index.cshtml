@model IEnumerable<TestingModule.Models.Duty>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <div class="form-group">
                Find by name: <select id="bySubject" name="bySubject" class="form-control" asp-items="ViewBag.SubjectId"><option value="">All</option></select>
                <a asp-action="Index">Back to Full List</a>
            </div>
            <div id="RubricSearch" class="form-group">
                Find by name: <select id="byRubric" name="byRubric" class="form-control" asp-items="ViewBag.RubricId"><option value="">All</option></select>
                <a asp-action="Index">Back to Full List</a>
            </div>
        </p>
    </div>
</form>
<table id="Duties" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rubric)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rubric.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Удалить</a> |
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $("#bySubject").change(function () {
            $.getJSON("/Duties/UpdateRubric?idSubject=" + $("#bySubject").val(), function (data) {
                //$("#RubricSearch").html('<select id ="byRubric" name="byRubric" class="form-control"><option value="">All</option></select>');
                $("#byRubric").html('');
                $("#byRubric").append('<option value="">All</option>');
                $.each(data, function (index, rubric) {
                    $("#byRubric").append('<option value="' + rubric.id + '">' + rubric.name + '</option>')
                })
            });
        })

    </script>

    <script>
        $("#byRubric").change(function () {
            $.getJSON("/Duties/GetDuties?idRubric=" + $("#byRubric").val(), function (data) {
                $("#Duties tbody").html('');
                $.each(data, function (index, duty) {
                    $("#Duties tbody").append(
                        '<tr><td>'+ duty.name +'</td>' +
                        '<td>' + duty.rubricName +'</td><td>' +
                        '<a href="/Duties/Edit/'+duty.id+'">Редактировать</a> |' +
                        '<a href="/Duties/Details/' + duty.id +'">Детали</a> |' +
                        '<a href="/Duties/Delete/' + duty.id +'">Удалить</a> |</td>' +
                        '</tr>');
                });
            });
        })

    </script>
}
