@model IEnumerable<TestingModule.Models.Rubric>
@{
    ViewData["Title"] = "Index";
}
<h2>Тема</h2>
<p>
    <a asp-action="Create">Создать</a>
</p>
<form asp-action="Index" method="get">
    <div class="form-actions no-color">
        <p>
            <div class="form-group">
                Тематика: <select name="bySubject" class="form-control" asp-items="ViewBag.SubjectId"><option value="">All</option></select>
                <input type="submit" value="Поиск" class="btn btn-default" /> |
                <a asp-action="Index">К списку</a>
            </div>
        </p>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                Название
            </th>
            <th>
                Тематика
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subject.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Редактировать</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Детали</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Удалить</a> |
                    @Html.ActionLink("Duties", "Index", "Duties", new { bySubject = item.Subject.ID, byRubric = item.ID })
                </td>
            </tr>
        }
    </tbody>
</table>
